<h1>Owner Listing</h1>

<%= link_to 'Add Owner', new_owner_path %>
<br />
<hr />
<% @owners.each do |owner| %>
  Name: <%= owner.first_name %> <%= owner.last_name %><br />
  Email: <%= mail_to owner.email %><br />
  Company: <%= owner.company %><br />
  <br />
  <div id="<%= owner.id %>">
    <%= link_to 'Delete', owner, method: :delete, data: { confirm: 'Are you sure?'}, id: owner.id %>
  </div>
  <hr />
<% end %>
